<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="false"
            android:contentDescription="UserImage"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/namesID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/profilePicture"
            android:layout_alignStart="@+id/profilePicture"
            android:layout_below="@+id/profilePicture"
            android:layout_marginTop="23dp"
            android:text="Name"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/ChatID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/MatchPlayID"
            android:layout_alignBottom="@+id/MatchPlayID"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:layout_toEndOf="@+id/profilePicture"
            android:layout_toRightOf="@+id/profilePicture"
            android:text="Chat" />

        <Button
            android:id="@+id/MatchPlayID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/profilePicture"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/ChatID"
            android:layout_toRightOf="@+id/ChatID"
            android:text="MatchPlay" />
    </RelativeLayout>
</LinearLayout>
